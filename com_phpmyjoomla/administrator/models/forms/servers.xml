    <field name="name" type="text" required="true" label="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_NAME" description="COM_PHPMYJOOMLA_FORM_DESC_SERVERS_NAME" hint="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_NAME"/>
    <field name="username" type="text" required="true" label="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_USERNAME" description="COM_PHPMYJOOMLA_FORM_DESC_SERVERS_USERNAME" hint="COM_PHPMYJOOMLA_FORM_LBL_SERVERS_USERNAME"/>
